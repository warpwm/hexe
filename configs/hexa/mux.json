{
  "input": {
    "timing": { "hold_ms": 400, "double_tap_ms": 250 },
    "binds": [
      { "mods": ["alt"], "key": "q", "context": {"focus": "any"}, "action": {"type": "mux.quit"} },
      { "mods": ["alt", "shift"], "key": "d", "context": {"focus": "any"}, "action": {"type": "mux.detach"} },

      { "mods": ["alt"], "key": "z", "context": {"focus": "any"}, "action": {"type": "pane.disown"} },
      { "mods": ["alt"], "key": "a", "context": {"focus": "any"}, "action": {"type": "pane.adopt"} },

      { "mods": ["alt"], "key": "h", "context": {"focus": "split"}, "action": {"type": "split.h"} },
      { "mods": ["alt"], "key": "v", "context": {"focus": "split"}, "action": {"type": "split.v"} },

      { "mods": ["alt"], "key": "t", "context": {"focus": "any"}, "action": {"type": "tab.new"} },
      { "mods": ["alt"], "key": ".", "context": {"focus": "any"}, "action": {"type": "tab.next"} },
      { "mods": ["alt"], "key": ",", "context": {"focus": "any"}, "action": {"type": "tab.prev"} },
      { "mods": ["alt"], "key": "x", "context": {"focus": "any"}, "action": {"type": "tab.close"} },

      { "mods": ["alt"], "key": "up", "context": {"focus": "any"}, "action": {"type": "focus.move", "dir": "up"} },
      { "mods": ["alt"], "key": "down", "context": {"focus": "any"}, "action": {"type": "focus.move", "dir": "down"} },
      { "mods": ["alt"], "key": "left", "context": {"focus": "any"}, "action": {"type": "focus.move", "dir": "left"} },
      { "mods": ["alt"], "key": "right", "context": {"focus": "any"}, "action": {"type": "focus.move", "dir": "right"} },

      { "mods": ["alt", "shift"], "key": "k", "context": {"focus": "float"}, "action": {"type": "float.nudge", "dir": "up"} },
      { "mods": ["alt", "shift"], "key": "j", "context": {"focus": "float"}, "action": {"type": "float.nudge", "dir": "down"} },
      { "mods": ["alt", "shift"], "key": "h", "context": {"focus": "float"}, "action": {"type": "float.nudge", "dir": "left"} },
      { "mods": ["alt", "shift"], "key": "l", "context": {"focus": "float"}, "action": {"type": "float.nudge", "dir": "right"} },

      { "mods": ["alt"], "key": "space", "context": {"focus": "any"}, "action": {"type": "float.toggle", "float": "0"} }
    ]
  },

  "confirm_on_exit": true,
  "confirm_on_detach": true,
  "confirm_on_disown": true,
  "confirm_on_close": true,

  "floats": [
    {
      "padding": {
        "x": 2,
        "y": 1
      },
      "style": {
        "border": {
          "color": {
            "active": 1,
            "passive": 237
          }
        }
      }
    },
    {
      "key": "1",
      "attributes": {
        "per_cwd": true,
        "sticky": true
      }
    },
    {
      "key": "2"
    },
    {
      "key": "3",
      "position": { "x": 100, "y": 0 },
      "size": { "width": 40, "height": 50 },
      "padding": { "x": 0, "y": 0 },
      "attributes": {
        "global": false
      }
    },
    {
      "key": "4",
      "attributes": {
        "destroy": true
      }
    },
    {
      "key": "f",
      "command": "btop",
      "title": "btop",
      "attributes": {
        "exclusive": true
      },
      "style": {
        "title": {
          "position": "topright",
          "outputs": [
            { "style": "bg:0 fg:1", "format": "[" },
            { "style": "bg:237 fg:250", "format": " $output " },
            { "style": "bg:0 fg:1", "format": "]" }
          ]
        }
      }
    }
  ],

  "splits": {
    "color": {
      "active": 1,
      "passive": 237
    },
    "separator_v": "│",
    "separator_h": "─"
  },

  "tabs": {
    "status": {
      "enabled": true,

      "left": [
        {
          "name": "time",
          "priority": 10,
          "outputs": [
            { "style": "bg:237 fg:250", "format": " " },
            { "style": "bold bg:237 fg:250", "format": "$output" },
            { "style": "bg:237 fg:250", "format": " " },
            { "style": "fg:237 bg:1", "format": "" }
          ]
        },
        {
          "name": "netspeed",
          "priority": 30,
          "outputs": [
            { "style": "bg:1 fg:0", "format": " $output " },
            { "style": "fg:1", "format": "" }
          ]
        },
        {
          "name": "uptime",
          "priority": 100,
          "outputs": [
            { "style": "fg:7", "format": " $output" }
          ]
        }
      ],

      "center": [
        {
          "name": "tabs",
          "priority": 1,
          "tab_title": "basename",
          "active_style": "bg:1 fg:0",
          "inactive_style": "bg:237 fg:250",
          "separator": " | ",
          "separator_style": "fg:7"
        }
      ],

      "right": [
        {
          "name": "session",
          "priority": 5,
          "outputs": [
            { "style": "fg:7", "format": "| $output " },
            { "style": "fg:1", "format": "" }
          ]
        },
        {
          "name": "cpu",
          "priority": 15,
          "outputs": [
            { "style": "bg:1 fg:0", "format": " $output " },
            { "style": "fg:1 bg:237", "format": "" }
          ]
        },
        {
          "name": "mem",
          "priority": 20,
          "outputs": [
            { "style": "bg:237 fg:250", "format": " $output " }
          ]
        },
        {
          "name": "battery",
          "priority": 40,
          "outputs": [
            { "style": "bg:237 fg:250", "format": "$output " }
          ]
        },
        {
          "name": "jobs",
          "priority": 200,
          "outputs": [
            { "style": "fg:7", "format": " $output" }
          ]
        }
      ]
    }
  }
}
